<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class:"img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <!-- プロフィール画像を表示するよ！ -->
    <!-- アタッチメント_イメージ_タグの右のインスタンスには画像を格納しているカラムを持っているところのものを入れるよ！ -->
    <!-- プロファイル_イメージの部分には画像が格納されているカラムを指定するよ -->
    <!-- フィル以下は画像の大きさ、フォーマットで画像拡張子を指定しているよ -->
    <!-- クラス以下はエイチティーエムエルのクラスをレールズのタグ用に指定しているよ -->
    <!-- フォールバックは画像データがカラム内にない場合に表示される画像を指定しているよ -->
    <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
    <% end %>
</div>

<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
    <div class="row">
      <div class="col-md-8 col-sm-offset-2">
        <div class="masonry-wrapper-cols">
          <div class="masonry-gutter"></div>
         <% @post_images.each do |post_image| %> 
         <!-- コントローラから渡されたポストイメージズ変数に入っているハッシュから一つずつ取り出してポストイメージ変数へしまうよ -->
          <div class="masonry-block">
            <div class="block block-image v1">

              <div class="block-image">
                <div class="view view-first">
                  <%= link_to post_image_path(post_image.id) do %>
                      <%= attachment_image_tag post_image, :image %>
                  <!-- このリファイルで用意されているイメージタグを作成するよ！ -->
                  <!-- ポストイメージモデル内のイメージアイディーから保存された画像のイメージタグを生成するんだ！ -->
                  <% end %>
                </div>
              </div>

              <div class="block-content">
                <%= attachment_image_tag post_image.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                <h3 class="block-title">
        <%= link_to post_image_path(post_image.id) do %>
                    <i class="fa fa-map maker"></i><%= post_image.shop_name %> 
                                                   <!-- ポストイメージモデルに定義されているショップネームカラムを表示するよ -->
        <% end %>
                </h3>
                <p><%= post_image.caption %></p>
                <!-- ポストイメージモデルに定義されているキャプションカラムを表示するよ！ -->
                <ul class="inline-meta">
                  <li>By
                    <%= post_image.user.name %>
                    <!-- ポストイメージモデルに定義されているユーザーアイディーに関連づいたユーザーモデルのネームカラムを表示するよ！ -->
                  </li>
                  <li>
                    <%= link_to "#{post_image.post_comments.count}コメント", post_image_path(post_image.id) %>
                    <!-- コメント件数を表示するよ -->
                  </li>
                </ul>
               </div>
             </div>
            </div>
          <% end %>
          <%= paginate @post_images, class: "paginate" %>
        </div>
      </div>
    </div>
  </div>
</section>
